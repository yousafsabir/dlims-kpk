model License {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  licenseNo  String   @unique
  name       String
  image      Json
  fatherName String
  cnic       String   @unique
  category   Json[]
  issueDate  String
  expiryDate String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("licenses")
}
